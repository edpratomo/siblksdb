
<%= bootstrap_form_for(pkg[:students_pkg], url: student_schedule_path) do |f| %>
  <%= f.hidden_field :id %>
  <%#= hidden_field_tag 'pkg[id]', pkg[:id]  %>
  <table class="table table-striped">
    <caption><%= pkg[:name] %></caption>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>SEN</th>
        <th>SEL</th>
        <th>RAB</th>
        <th>KAM</th>
        <th>JUM</th>
        <th>SAB</th>
      </tr>
    </thead>

    <tbody>
      <% pkg[:rows].each do |row| %>
      <tr>
        <td><%= row.shift %></td>
        <% row.each do |cell| %>
          <td><% cell.each do |e| %>
            <%= f.check_box(:instructors_schedule_ids, 
                            {multiple: true, label: "#{e.avail_seat} (#{e.instructor.nick})"}, 
                            e.id, nil)
            %>
            <% end %>
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
