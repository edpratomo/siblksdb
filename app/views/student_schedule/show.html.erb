<p id="notice"><%= notice %></p>
<%= render partial: 'shared/student_navbar' %>

<h3><%= @student.name %></h3>

<% if @my_packages.empty? %>

<div class="alert alert-danger" role="alert">Saat ini sedang tidak mengikuti satupun kursus.</div>

<% else %>

<% @my_packages.each do |pkg| %>
<div style="padding-bottom: 30px;">
  <table class="table table-striped">
    <caption><h4><%= pkg[:name] %></h4></caption>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>SEN</th>
        <th>SEL</th>
        <th>RAB</th>
        <th>KAM</th>
        <th>JUM</th>
        <th>SAB</th>
      </tr>
    </thead>

    <tbody>
      <% pkg[:rows].each do |row| %>
      <tr>
        <td><%= row.shift %></td>
        <% row.each do |cell| %>
          <td><%= cell %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Edit', edit_student_schedule_index_path(@student, pkg[:id]) %> 
</div>

<% end %>

<% end %>
