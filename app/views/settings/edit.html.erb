<% if flash[:alert] %>
  <div id="error_explanation">
    <h2>Error when updating Settings:</h2>
    <ul>
    <li> <%= flash[:alert] %></li>
    </ul>
  </div>
<% end %>
<p id="notice"><%= notice %></p>

<h2>Edit Settings</h2>
<%= form_tag(settings_update_path, {method: :patch, class: "form-horizontal", role: "form", multipart: true}) do %>

  <div class="form-group">
    <%= label_tag :change_log_archive_interval, "Rotasi Log Perubahan setiap", class: "control-label col-sm-3" %>
    <div class="col-sm-2">
      <%= select_tag :change_log_archive_interval, options_for_select(@change_log_archive_intervals, @current_interval), 
                     class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :holidays, "Upload kalender hari libur", class: "control-label col-sm-3" %>
    <div class="col-sm-3">
      <%= file_field_tag :holidays, class: "form-control", accept: "application/json" %>
    </div>
  </div>

  <div class="actions">
    <%= submit_tag "Ubah Settings" %>
  </div>

<% end %>

