<h2 class="sub-header">Listing users</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Username</th>
      <th>Fullname</th>
      <th>Group</th>
      <th>Linked to instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.gravatar_url(size: 60), class: "gravatar_tip img-rounded" %></td>
        <td><%= link_to user.username, user %></td>
        <td><%= user.fullname %></td>
        <td><%= user.group.name %></td>
        <td><% if user.instructor %>
            <%= user.instructor.name %> (<%= user.instructor.nick %>)
            <% else %> N/A
            <% end %>
        </td>
        <td><%= link_to edit_user_path(user), :class => "btn btn-info btn-xs" do %><i class="glyphicon glyphicon-pencil">Edit</i><% end %></td>
        <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-info btn-xs" do %>
            <i class="glyphicon glyphicon-remove">Delete</i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New User', new_user_path, method: :get %>
