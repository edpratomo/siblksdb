<h2>Edit Profile</h2>
<%= form_for(@user, url: profile_update_path, method: :patch, html: { class: "form-horizontal", role: "form"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Gravatar", class: "control-label col-sm-2" %>
    <div class="col-xs-4 gravatar_tip">
    <%= image_tag @user.gravatar_url(size: 120) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, "Nama Lengkap", class: "control-label col-sm-2" %>
    <div class="col-xs-4">
      <%= f.text_field :fullname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, "Email", class: "control-label col-sm-2" %>
    <div class="col-xs-3">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, "Password", class: "control-label col-sm-2" %>
    <div class="col-xs-3">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, "Confirm password", class: "control-label col-sm-2" %>
    <div class="col-xs-3">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Update profile" %>
  </div>
<% end %>
