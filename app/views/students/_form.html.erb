<%= bootstrap_form_for(@student, layout: :horizontal, label_col: "col-sm-2", control_col: "col-xs-4") do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, label: "Nama Lengkap", class: "form-control" %>
<%= f.form_group :sex do %>
<%= f.radio_button :sex, "female", label: "Perempuan" %>
<%= f.radio_button :sex, "male", label: "Laki-laki" %>
<% end %>
  </div>
  <div class="field">
    <%= f.text_field :birthplace, label: "Tempat Lahir", control_col: "col-xs-3" %>
  </div>
  <div class="field">
    <%= f.date_field :birthday, label: "Tanggal Lahir", control_col: "col-xs-3" %>
  </div>
  <div class="field">
    <%= f.telephone_field :phone, label: "Telpon", control_col: "col-xs-2" %>
  </div>
  <div class="field">
    <%= f.text_field :note, label: "Keterangan" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
