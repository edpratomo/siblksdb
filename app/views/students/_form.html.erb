<%= form_for(@student, html: { class: "form-horizontal", role: "form"}) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name, "Nama Lengkap", class: "control-label col-sm-2" %>
      <div class="col-xs-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :avatar, "Foto", class: "control-label col-sm-2" %>
      <div class="col-xs-4">
        <%= f.file_field :avatar, class: "form-control", accept: "image/png,image/gif,image/jpeg" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <label class="radio"><%= f.radio_button :sex, "female" %>Perempuan</label>
        <label class="radio"><%= f.radio_button :sex, "male" %>Laki-laki</label>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :birthplace, "Tempat Lahir", class: "control-label col-sm-2" %>
      <div class="col-xs-3">
        <%= f.text_field :birthplace, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :birthdate, "Tanggal Lahir", class: "control-label col-sm-2" %>
      <div class="col-xs-3">
        <%= f.date_field :birthdate, class: "form-control" %><span class="help-block">bulan/hari/tahun</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Telpon", class: "control-label col-sm-2" %>
      <div class="col-xs-2">
        <%= f.telephone_field :phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :note, "Keterangan", class: "control-label col-sm-2" %>
      <div class="col-xs-4">
        <%= f.text_field :note, class: "form-control" %>
      </div>
    </div>

  <% @biodata_fields.each do |biodata| %>
    <div class="form-group">
      <%= f.label biodata[0], biodata[1], class: "control-label col-sm-2" %>
      <% unless biodata[2] %>
      <div class="col-xs-4">
        <%= text_field_tag "student[biodata][#{biodata[0]}]", @student.biodata[biodata[0]], class: "form-control" %>
      </div>
      <% else %>
       <% if biodata[2].is_a? Array %>
       <div class="col-sm-7 form-inline">
        <% biodata[2].each do |answer| %>
          <div class="radio form-control">
          <label>
            <%= radio_button_tag "student[biodata][#{biodata[0]}]", answer, false %> <%= answer %>
          </label>
          </div>
        <% end %>
       </div>

       <% else %>
        <div class="col-xs-1">
          <%= number_field_tag "student[biodata][#{biodata[0]}]", @student.biodata[biodata[0]], min: 0, class: "form-control" %>
          <%#= biodata[3] %>
        </div>
       <% end %>
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
