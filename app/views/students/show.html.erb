<%= render partial: 'shared/student_navbar' %>
<p id="notice"><%= notice %></p>

<h3><%= @student.name %></h3>

<dl class="dl-horizontal" style="font-size:large;">
  <dt>Jenis kelamin</dt>
  <dd><%= @student.sex == 'male' ? 'Laki-laki' : 'Perempuan' %></dd>
</dl>

<dl class="dl-horizontal" style="font-size:large;">
  <dt style="white-space:normal;">Tempat, tanggal lahir</dt>
  <dd><%= @student.birthplace %>, <%= @student.birthdate %></dd>
</dl>

<dl class="dl-horizontal" style="font-size:large;">
  <dt>Nomor Telpon</dt>
  <dd><%= @student.phone %></dd>
</dl>

<dl class="dl-horizontal" style="font-size:large;">
  <dt>Keterangan</dt>
  <dd><%= @student.note %></dd>
</dl>

<dl class="dl-horizontal" style="font-size:large;">
  <dt>Sudah Lulus</dt>
  <dd><%= @student.qualifications.map {|e| "#{e.pkg} Lv.#{e.level}" }.join(', ') %></dd>
</dl>

<p style="padding-top: 30px;">
  <strong>Created at:</strong>
  <%= @student.created_at %>
</p>

<p>
  <strong>Modified at:</strong>
  <%= @student.modified_at %>
</p>

<p>
  <strong>Modified by:</strong>
  <%= @student.modified_by %>
</p>

<%#= link_to 'Back', students_path %>
