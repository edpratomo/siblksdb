<h2>Listing instructors</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nama Lengkap</th>
      <th>Nick</th>
      <th>Program</th>
      <th style="text-align:center;">Kapasitas</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.name %></td>
        <td><%= instructor.nick %></td>
        <td><%= instructor.programs.sort_by {|e| e.id}.map {|e| e.program}.join(", ") %>
        <td style="text-align:center;"><%= instructor.capacity %></td>
        <td><%= link_to 'Show', instructor %></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor) %></td>
        <td><%= link_to 'Jadwal', edit_schedule_instructor_path(instructor) %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Instructor', new_instructor_path, method: :get %>
