  <caption style="padding-top:20px;padding-bottom:20px">
    <p style="font-size:x-large">Laporan 3 Bulanan Pelaksanaan Pelatihan</p>
    <p style="font-size:x-large">BLK Salesian Don Bosco</p>
  </caption>
  <thead>
    <tr>
      <th rowspan="3">Kejuruan</th>
      <th rowspan="3" style="text-align:center;">Tingkat</th>
      <th style="text-align:center;" colspan="6"><%= @columns[0] %></th>
      <th style="text-align:center;" colspan="6"><%= @columns[1] %></th>
      <th style="text-align:center;" colspan="6"><%= @columns[2] %></th>
    </tr>
    <tr>
      <td style="text-align:center;" colspan="3">Sedang Dilatih</td>
      <td style="text-align:center;" colspan="3">Lulus</td>
      <td style="text-align:center;" colspan="3">Sedang Dilatih</td>
      <td style="text-align:center;" colspan="3">Lulus</td>
      <td style="text-align:center;" colspan="3">Sedang Dilatih</td>
      <td style="text-align:center;" colspan="3">Lulus</td>
    </tr>
    <tr>
      <td style="text-align:center;">L</td>
      <td style="text-align:center;">P</td>
      <td style="text-align:center;">Jumlah</td>
      <td style="text-align:center;">L</td>
      <td style="text-align:center;">P</td>
      <td style="text-align:center;">Jumlah</td>
      <td style="text-align:center;">L</td>
      <td style="text-align:center;">P</td>
      <td style="text-align:center;">Jumlah</td>
