<div class='well well-small'>
  <div class='pull-right' data-intro='Reset the filter settings to defaults.' data-position='bottom'>
    <%= link_to "Reset filters", reset_filterrific_url, :class => 'btn btn-default btn-sm' %>
  </div>
  <div>
    <%= page_entries_info grades, :model => 'grade' %>
  </div>
  <div>
    <%= render_filterrific_spinner %>
  </div>
</div>

<%# unless grades.empty? %>
<% if grades.size > 0 and exam %>
<table class="table pretty table-hover table-striped">
  <thead>
    <tr>
      <th>Nama</th>
    <% exam.components.sort_by {|e| e.sequence}.each do |component| %>
      <th><%= component.name %></th>
    <% end %>
    </tr>
  </thead>

  <tbody>
    <% grades.each do |gr| %>
      <tr>
        <td><%= gr.students_record.student.name %></td>
        <% gr.ordered_grade(exam.components).each do |component_grade| %>
        <td>
          <div class="edit" id="<%= component_grade.id %>"><%= component_grade.value %></div>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= will_paginate grades, renderer: BootstrapPagination::Rails %>
<br>
<script type="text/javascript">
$(document).ready(function() {
<% grades.each do |gr| %>
  $('.edit').editable('<%= update_component_grade_url(gr) %>', {
    id: 'component_id',
    name: 'component_value',
    submitdata: { _method: 'patch' } // required for rails
  });
<% end %>
});
</script>
