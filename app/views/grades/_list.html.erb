<div class='well well-small'>
  <div class='pull-right' data-intro='Reset the filter settings to defaults.' data-position='bottom'>
    <%= link_to "Reset filters", reset_filterrific_url, :class => 'btn btn-default btn-sm' %>
  </div>
  <div>
    <%= page_entries_info grades, :model => 'grade' %>
  </div>
  <div>
    <%= render_filterrific_spinner %>
  </div>
</div>

<table class="table pretty table-hover table-striped">
  <thead>
    <tr>
    <% exam.components.sort_by {|e| e.sequence}.each do |component| %>
      <th><%= component.name %></th>
    <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>


<table>
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% grades.each do |grade| %>
      <tr>
        <td><%= grade.students_record.student.name %></td>
        <td><%= grade.exam.name %></td>
        <td><%= grade.grade || 'N/A' %>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate grades, renderer: BootstrapPagination::Rails %>
<br>
