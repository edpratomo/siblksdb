<p id="notice"><%= notice %></p>

<h2>Daftar Kursus</h2>

<table class="table pretty table-hover table-striped">
  <thead>
    <tr>
      <th>Kursus</th>
      <th>Program</th>
      <th style="text-align:center">Level</th>
      <th>Instruktur Kepala</th>
      <th>Komponen Nilai</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.program.program %></td>
        <td style="text-align:center"><%= @max_levels[course.id] %></td>
        <td><%= link_to_if course.head_instructor, course.head_instructor && course.head_instructor.name || 'N/A', course.head_instructor %></td>
        <td><%= course.components.size %></td>
        <td><%= link_to edit_course_path(course), :class => "btn btn-info btn-xs" do %>
            <i class="glyphicon glyphicon-pencil"> Edit</i>
            <% end %>
        </td>
      <% if course.is_destroyable? %>
        <td><%= link_to course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" do %>
            <i class="glyphicon glyphicon-remove"> Delete</i>
            <% end %>
        </td>
      <% else %>
        <td><%= link_to course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs disabled" do %>
            <i class="glyphicon glyphicon-remove"> Delete</i>
            <% end %>
        </td>
      <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

