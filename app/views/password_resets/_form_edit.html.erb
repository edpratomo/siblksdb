<div class="container">
  <div class="row">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="text-center">
              <%= link_to image_tag("small-logo2.png", :alt => "BLK Don Bosco logo", class: "login", height: "52"), root_url %>
              <h3 class="text-center">Reset Password</h3>
              <div class="panel-body">
              <%= form_for @user,  html: { class: "form" }, :url => password_reset_path(params[:id]) do |f| %>
                <fieldset>
                  <div class="row form-horizontal">
                    <div class="col-sm-10">
                    <div class="form-group">
                      <%= f.label :password, class: "control-label col-sm-5" %>
                      <div class="input-group col-sm-5">
                      <%= f.password_field :password, class: "form-control", required: true %>
                      </div>
                    </div>
                    </div>
                  </div>
                  <div class="row form-horizontal">
                    <div class="col-sm-10">
                  <div class="form-group">
                    <%= f.label :password_confirmation, "Confirmation", class: "control-label col-sm-5" %>
                    <div class="input-group col-sm-5">
                    <%= f.password_field :password_confirmation, class: "form-control", required: true %>
                    </div>
                  </div>
                  </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Update Password", class: "btn btn-lg btn-primary btn-block" %>
                  </div>
                </fieldset>
              <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
