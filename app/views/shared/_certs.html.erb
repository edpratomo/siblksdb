<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th style="max-width:80px;">Sertifikat</th>
      <th style="max-width:40px;text-align:center;">Diterbitkan</th>
      <th style="max-width:30px;"></th>
    </tr>
  </thead>

  <tbody>
    <% certs.each do |cert| %>
      <tr>
        <td style="max-width:80px;"><%= cert.course.program.program %> - <%= cert.course.name %></td>
        <td style="max-width:40px;text-align:center;"><%= cert.created_at.strftime("%d %b %Y") %></td>
        <td style="max-width:30px;"><%= link_to 'PDF', cert_path(cert, format: :pdf) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
